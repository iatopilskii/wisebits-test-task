{
	"compilerOptions": {
		"moduleResolution": "node",
		"target": "esnext",
		"module": "esnext",
		"importsNotUsedAsValues": "remove",
		"isolatedModules": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"strict": false,
		"baseUrl": ".",
		"paths": {
			"*": [
				"./src/*"
			]
		}
	},
	"include": [
		"src/**/*",
		"webpack.config.ts"
	],
	"exclude": [
		"node_modules/*",
		"__sapper__/*",
		"public/*"
	],
	"ts-node": {
		"compilerOptions": {
			"module": "commonjs"
		}
	}
}
